pipeline {
    agent any

    environment {
        IMAGE_NAME = "vikkram-nodejs-app:latest"
        DOCKER_REPO = "vikkramsk2001/skemc-nodejs"
        DOCKERHUB_CREDENTIALSID = "vikkram-dockerhub-token"
    }

    stages {

        stage('Code Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/vikkram-devops-engineer/Node.js-pipeline.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                bat "docker build -t %IMAGE_NAME% ."
            }
        }

        stage('Docker login and Push') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'DOCKERHUB_CREDENTIALSID', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    bat """
                        docker login -u %DOCKER_USER% -p %DOCKER_PASS%
                        docker tag %IMAGE_NAME% %DOCKER_REPO%:latest
                        docker push %DOCKER_REPO%:latest
                    """
                }
            }
        }

        stage('Pull Docker Image') {
            steps {
                bat "docker pull %DOCKER_REPO%:latest"
            }
        }
        
        stage('Deploy Docker Container') {
            steps {
                bat "docker run -d -p 80:3000 --name skemc-node-container %DOCKER_REPO%:latest"
            }
        }

    }
}

